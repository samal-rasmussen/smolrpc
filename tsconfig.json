{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"module": "esnext",
		"moduleResolution": "node",
		"noErrorTruncation": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext"
	},
	"include": ["src"],
	"exclude": ["src/deno-server/deno-server.ts"]
}
